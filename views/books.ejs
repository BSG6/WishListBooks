<!doctype html>
<html>
<head>
    <title>Buddha Bowl Creator</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/0afbc19ae4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa-solid fa-bowl-food"></span> Buddha Bowl Recipes</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- PROFILE INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa-regular fa-user"></span> Profile</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
            <h3>Book I want to read </h3>
            <img src="" alt="">
            <form id="form" action="/bowl" method="POST">
                <!-- Title -->
                <input type="text" name="title" placeholder="Enter the name of the book" required>
                <input type="text" name="link" placeholder="Add a link where this book can be purchased" >
                <button class="submit" type="submit">Submit Your Book</button>
                </form>
                <p><a href="/savedBooks">Go saved to books</a></p>
        </div>

</div>

<script src="index.js"></script>

</body>
</html>
